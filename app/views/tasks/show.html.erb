<h1 style="margin:20px;"><%= @tasks.title %></h1>
<div style="margin:30px;" class="form-content">
  <ul  style="list-style-type: none;">
    <li><%= @tasks.details %></li>
    <% if @tasks.completed == false %>
    <li><%= "This task has not been completed yet" %></li>
    <% else %>
    <li><%= "Well done! This task is done" %></li>
    <% end %>
  </ul>
     <%= link_to 'back to list', tasks_path  %>
</div>
<div class="btn"> <%= link_to 'edit', edit_task_path(@tasks.id) %></div>
